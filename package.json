{
  "name": "kunai",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "npm-run-all --parallel dev:server dev:client",
    "dev:server": "cross-env NODE_ENV=development tsx watch server/src/index.ts",
    "dev:client": "cross-env NODE_ENV=development vite --host --port 5173 --config client/vite.config.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --config client/vite.config.ts",
    "build:server": "tsc -p server/tsconfig.json",
    "start": "node dist/server/index.js"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "rss-parser": "^3.13.0",
    "sanitize-html": "^2.13.1",
    "zod": "^3.23.8",
    "clsx": "^2.1.1",
    "fast-xml-parser": "^4.4.0",
    "@mozilla/readability": "^0.5.0",
    "jsdom": "^24.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.7",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.1.2",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5",
    "vite": "^5.3.4"
  },
  "engines": {
    "node": ">=20"
  }
}
