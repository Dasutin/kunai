{
  "manifest_version": 3,
  "name": "Kunai RSS Reader Companion",
  "description": "Shows unread RSS count and opens the Kunai RSS Reader.",
  "version": "1.0.0",
  "action": {
    "default_title": "Open Kunai",
    "default_icon": {
      "192": "icon-192.png"
    }
  },
  "icons": {
    "192": "icon-192.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "permissions": ["storage", "alarms"],
  "host_permissions": ["<all_urls>"]
}
